{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["assets/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "server.ts"
  ],
  "exclude": ["node_modules"]
}
